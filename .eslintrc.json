{
  "env": {
    "browser": false,
    "es2021": true
  },
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "airbnb-base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "linebreak-style": 0,
    "class-methods-use-this": 0,
    "eol-last": 0,
    "import/extensions": 0,
    "import/prefer-default-export": 0,
    "explicit-module-boundary-types": 0,
    "max-len": 0
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      }
    }
  }
}